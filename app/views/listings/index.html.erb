<div class="jumbotron">
  <h3>"not handcrafted" items from around the world</h3>
  <h4>Available (almost) daily at GA!</h4>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
            <!-- delete links on homepage -->
            <%# if (user_signed_in?) && (current_user == listing.user) %>
              <%#= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%#= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            <%# end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>    

<br>

<% if user_signed_in? %>
  <%= link_to 'Add New Item', new_listing_path, class: "btn btn-link", data: { no_turbolink: true }  %>
<% end %>
