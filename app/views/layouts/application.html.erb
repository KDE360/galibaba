<!DOCTYPE html>
<html>
 <head>
  <title>GAlibaba</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => ENV["STRIPE_PUBLIC_KEY"] %>
</head>
  <body>
  	
  	<%= render 'layouts/header' %>

    <div class="container">	
    	<!-- custom codes for welcmme message -->
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name == :notice ? "sucess" :"danger" %>" alert-dismissable>
            <button type="button" class="close" data-dismiss="alert" aria-hiden="true">&times;</button>
            <%= content_tag :div, msg, :id =>"flash_#{name}" %>
          </div>
        <% end %>
      <% end %>

      <!-- to prevent display double warning!!!
      <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p> -->

      <%= yield %>

    	 <%= render 'layouts/footer' %>
       
    </div> 
  </body>
</html>
